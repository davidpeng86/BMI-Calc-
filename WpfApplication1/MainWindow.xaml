<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="380" Width="640">
    <Grid>
        <StackPanel Margin=" 30">
            <Canvas Width="400" Height="50" Background="Lavender">
                <Border CornerRadius="10" Background="Aqua" x:Name="Height">
                    <TextBlock x:Name="HeightNum" Width="50" Height="20" TextAlignment="Center">
                       100 
                    </TextBlock>
                </Border>
            </Canvas>
            <Slider Minimum="50" Maximum="250" x:Name="HeightSlider" ValueChanged="HeightSlider_ValueChanged">
            </Slider>

            <StackPanel Orientation="Horizontal" >
                <TextBlock FontSize="40" x:Name="BMInum">29</TextBlock>
                <TextBlock FontSize="20" Margin="0 8 0 0" x:Name="BMIdecimal">.5</TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
